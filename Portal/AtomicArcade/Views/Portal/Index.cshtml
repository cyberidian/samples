@{
    ViewBag.Title = "Atomic Arcade - Cyberidian Digital Arts";
    ViewBag.Current = "Index";
}
<div class="container featured-games">
    <div class="row text-center">
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail  feature-a">
                <img src="~/Content/images/go-fish.png" alt="Go Fish" class="img-responsive">
                <div class="caption">
                    <h3>Go Fish!</h3>
                    <p>Play Go Fish against the computer.</p>
                    <p><a href="#" class="btn btn-primary" role="button">Play <span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span></a></p>
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail feature-b">
                <img src="~/Content/images/halloween-puzzles.png" alt="Halloween Puzzle" class="img-responsive">
                <div class="caption">
                    <h3>Halloween Puzzles</h3>
                    <p>How fast can you solve this spooky slider puzzle?</p>
                    <p><a href="#" class="btn btn-primary" role="button">Play <span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span></a> </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail feature-c">
                <img src="~/Content/images/blackjack.png" alt="Black Jack" class="img-responsive">
                <div class="caption">
                    <h3>Black Jack</h3>
                    <p>Try your hand at Black Jack</p>
                    <p><a href="#" class="btn btn-primary" role="button">Play <span class="glyphicon glyphicon-hand-right" aria-hidden="true"></span></a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12 section-title">
            <h3>More Games</h3>
        </div>
    </div>
    <div class="row bg-features ">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
            <div class="more-games"><img alt="Card Games" src="~/Content/images/cardgames.png" class="img-responsive"></div>
            <div class="text-left game-list">
                <ul>
                    <li>Go Fish!</li>
                    <li>Go Fish! Multiplayer</li>
                    <li>Crazy 8</li>
                </ul>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
            <div class="more-games"><img alt="Puzzles" src="~/Content/images/puzzles.png" class="img-responsive"></div>
            <div class="text-left game-list">
                <ul>
                    <li>Halloween Puzzles</li>
                    <li>Cat Puzzles</li>
                    <li>Jigsaw</li>
                    <li>Sliders</li>
                </ul>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center">
            <div class="more-games"><img src="~/Content/images/casino.png" alt="Casino Games" width="148" height="148" class="img-responsive" /></div>
            <div class="text-left game-list">
                <ul>
                    <li>Black Jack</li>
                    <li>Roulette</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="section-spacer"></div>
</div>